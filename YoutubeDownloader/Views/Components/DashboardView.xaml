<UserControl
    x:Class="YoutubeDownloader.Views.Components.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:YoutubeDownloader.ViewModels.Components"
    xmlns:converters="clr-namespace:YoutubeDownloader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    d:DataContext="{d:DesignInstance Type=components:DashboardViewModel}"
    FocusManager.FocusedElement="{Binding ElementName=QueryTextBox}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <Grid Grid.Row="0" Background="{DynamicResource MaterialDesignDarkBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Query and process query button  -->
            <materialDesign:Card Grid.Column="0" Margin="12,12,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Search icon  -->
                    <materialDesign:PackIcon
                        Grid.Column="0"
                        Width="24"
                        Height="24"
                        Margin="8"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Kind="Search" />

                    <!--  Query  -->
                    <TextBox
                        x:Name="QueryTextBox"
                        Grid.Column="1"
                        Margin="0,6,6,8"
                        VerticalAlignment="Bottom"
                        materialDesign:HintAssist.Hint="Đường link Youtube hoặc từ khóa tìm kiếm"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        AcceptsReturn="True"
                        BorderThickness="0"
                        FontSize="16"
                        MaxLines="4"
                        PreviewKeyDown="QueryTextBox_OnPreviewKeyDown"
                        Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}"
                        VerticalScrollBarVisibility="Auto" TextChanged="QueryTextBox_TextChanged" />
                    
                    <!--  Open directory button  -->
                    <Button
                        Grid.Column="2"
                        Margin="0,6,6,6"
                        Padding="4"
                        Command="{s:Action OpenFolder}"
                        IsDefault="False"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        ToolTip="Mở thư mục chứa tệp MP4 đã tải về">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="FolderOpen" />
                    </Button>
                    
                    <!--  Delete query button  -->
                    <Button
                        Grid.Column="3"
                        Margin="0,6,6,6"
                        Padding="4"
                        Command="{s:Action DeleteQuery}"
                        IsDefault="False"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        IsEnabled="{Binding CanProcessQuery, Mode=OneWay}"
                        ToolTip="Xóa">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="CloseThick" />
                    </Button>
                     <!--  Paste query button  -->
                    <Button
                        Grid.Column="4"
                        Margin="0,6,6,6"
                        Padding="4"
                        Command="{s:Action PasteQuery}"
                        IsDefault="False"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        ToolTip="Dán">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="ContentPaste" />
                    </Button>                   
                    <!--  Process query button  -->
                    <Button
                        Grid.Column="5"
                        Margin="0,6,6,6"
                        Padding="4"
                        Command="{s:Action ProcessQuery}"
                        IsDefault="True"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        ToolTip="Tìm">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="ArrowRight" />
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!--  Settings button  -->
            <Button
                Grid.Column="1"
                Margin="6"
                Padding="4"
                Command="{s:Action ShowSettings}"
                Foreground="{DynamicResource MaterialDesignDarkForeground}"
                Style="{DynamicResource MaterialDesignFlatButton}"
                ToolTip="Cài đặt">
                <Button.Resources>
                    <SolidColorBrush x:Key="MaterialDesignFlatButtonClick" Color="#4C4C4C" />
                </Button.Resources>
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="Settings" />
            </Button>
            <Button
                Grid.Column="2"
                Margin="6"
                Padding="4"
                Command="{s:Action Help}"
                Foreground="{DynamicResource MaterialDesignDarkForeground}"
                Style="{DynamicResource MaterialDesignFlatButton}"
                ToolTip="Hướng dẫn">
                <Button.Resources>
                    <SolidColorBrush x:Key="MaterialDesignFlatButtonClick" Color="#4C4C4C" />
                </Button.Resources>
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="HelpCircleOutline" />
            </Button>

            <Button
                Visibility="Collapsed"
                Grid.Column="3"
                Margin="6"
                Padding="4"
                Command="{s:Action UploadVideo}"
                Foreground="{DynamicResource MaterialDesignDarkForeground}"
                Style="{DynamicResource MaterialDesignFlatButton}"
                ToolTip="Tải lên">
                <Button.Resources>
                    <SolidColorBrush x:Key="MaterialDesignFlatButtonClick" Color="#4C4C4C" />
                </Button.Resources>
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="FileUploadOutline" />

            </Button>
            <Button
                Grid.Column="3"
                Margin="6"
                Padding="4"
                Command="{s:Action UploadMultipleVideo}"
                Foreground="{DynamicResource MaterialDesignDarkForeground}"
                Style="{DynamicResource MaterialDesignFlatButton}"
             
                ToolTip="{Binding TextOfUploadOrSignInButton}">
                <Button.Content>
                    <TextBlock>
                        <Run Text="{Binding TextOfUploadOrSignInButton}" />
                    </TextBlock>
                </Button.Content>
            </Button>

        </Grid>

        <!--  Progress  -->
        <ProgressBar
            Grid.Row="1"
            Background="{DynamicResource MaterialDesignDarkBackground}"
            IsIndeterminate="{Binding IsProgressIndeterminate}"
            Value="{Binding Progress.Current.Fraction, Mode=OneWay}" />

        <!--  Content  -->
        <Grid Grid.Row="3" Background="{DynamicResource MaterialDesignCardBackground}" >
            <!--  Placeholder  -->
            <StackPanel
                Margin="8,32,8,8"
                HorizontalAlignment="Center"
                Visibility="{Binding IsDownloadsAvailable, Converter={x:Static converters:BoolToVisibilityConverter.CollapsedOrVisible}}">
                <materialDesign:PackIcon
                    Width="258"
                    Height="258"
                    HorizontalAlignment="Center"
                    Foreground="{DynamicResource MaterialDesignDivider}"
                    Kind="Youtube" />

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Light"
                    TextAlignment="Center"
                    TextWrapping="Wrap">
                    <Run Text="Sao chép và dán" />
                    <Run FontWeight="SemiBold" Text="đường link Youtube" />
                    <Run Text="hoặc nhập vào " />
                    <Run FontWeight="SemiBold" Text="từ khóa tìm kiếm" />
                    <Run Text="rồi bấm phím" />
                    <Run FontWeight="SemiBold" Text="Enter" />
                    <Run Text="để bắt đầu tải" />
                    <LineBreak />
                    <LineBreak />
                    <Run Text="Hoặc bấm phím" />
                    <Run FontWeight="SemiBold" Text="Shift+Enter" />
                    <Run Text="để thêm nhiều đường link Youtube hoặc nhiều từ khóa tìm kiếm" />
                </TextBlock>
            </StackPanel>

            <!--  Downloads  -->
            <DataGrid
                Background="{DynamicResource MaterialDesignCardBackground}"
                ColumnWidth="Auto"
                HorizontalScrollBarVisibility="Disabled"
                ItemsSource="{Binding Downloads}"
                ScrollViewer.CanContentScroll="False"
                VerticalScrollBarVisibility="Auto"
                Visibility="{Binding IsDownloadsAvailable, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrHidden}}">
                <DataGrid.Resources>
                <Style TargetType="ScrollBar">
                    <Style.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="Width" Value="35"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{s:Action RemoveSuccessfulDownloads}" Header="Ẩn các dòng TẢI XONG" />
                        <MenuItem Command="{s:Action RemoveInactiveDownloads}" Header="Ẩn TẤT CẢ" />
                        <Separator />
                        <MenuItem Command="{s:Action RestartFailedDownloads}" Header="Tải các dòng THẤT BẠI" />
                        <Separator />
                        <MenuItem Command="{s:Action RestartCancelDownloads}" Header="Tải các dòng BỊ HỦY" />
                        <Separator />
                        <MenuItem Command="{s:Action CancelAllDownloads}" Header="Hủy tải TẤT CẢ" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.RowStyle>
                    <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="{x:Type DataGridRow}">
                        <!--  Triggers  -->
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{x:Null}" />
                                <Setter Property="BorderBrush" Value="{x:Null}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{x:Null}" />
                                <Setter Property="BorderBrush" Value="{x:Null}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <!--  Columns  -->
                <DataGrid.Columns>
                    <!--  Thumbnail  -->
                    <DataGridTemplateColumn MinWidth="130" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type components:DownloadViewModel}">
                                <Image
                                Width="120"
                                Height="90"
                                Stretch="None"
                                VerticalAlignment="Center"
                                Source="{Binding Video, Converter={x:Static converters:VideoToLowestQualityThumbnailUrlConverter.Instance}}" >
                                </Image>
                            </DataTemplate>
                            
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--  File name  -->
                    <DataGridTemplateColumn
                        MinWidth="300"
                        Header="Tệp"
                        SortMemberPath="FileName">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type components:DownloadViewModel}">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    TextWrapping="WrapWithOverflow"
                                    Width="300"
                                    Cursor="Hand"
                                    Foreground="{DynamicResource MaterialDesignBody}"
                                    Text="{Binding FileNameShort}"
                                    TextTrimming="CharacterEllipsis"
                                    ToolTip="Xem trên Youtube" >
                                    <TextBlock.InputBindings>
                                        <MouseBinding Gesture="LeftClick" s:View.ActionTarget="{Binding}" Command="{s:Action WathOnYoutube}" />
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--  Status  -->
                    <DataGridTemplateColumn
                        MinWidth="200"
                        Width="*"
                        Header="Trạng thái"
                        SortMemberPath="ProgressOperation.Progress">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type components:DownloadViewModel}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Progress  -->
                                    <ProgressBar
                                        Grid.Column="0"
                                        Margin="0,0,6,0"
                                        Foreground="{DynamicResource SecondaryHueMidBrush}"
                                        IsIndeterminate="{Binding IsProgressIndeterminate}"
                                        Maximum="1"
                                        Minimum="0"
                                        Value="{Binding Progress.Current.Fraction, Mode=OneWay}">
                                        <ProgressBar.Style>
                                            <Style BasedOn="{StaticResource MaterialDesignCircularProgressBar}" TargetType="{x:Type ProgressBar}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Enqueued}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled_low_quality}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled_too_short}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled_too_long}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Completed}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Completed_Already}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>                                                    
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Failed}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Deleted}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>

                                    <!--  Status  -->
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <!--  Pending  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Enqueued}">
                                                        <Setter Property="Opacity" Value="0.7" />
                                                        <Setter Property="Text" Value="CHỜ TẢI ..." />
                                                    </DataTrigger>

                                                    <!--  Downloading  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Started}">
                                                        <Setter Property="Text" Value="{Binding Progress.Current}" />
                                                    </DataTrigger>

                                                    <!--  Successful  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Completed}">
                                                        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                        <Setter Property="Text" Value="✓ TẢI XONG" />
                                                    </DataTrigger>

                                                    <!--  Successful already -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Completed_Already}">
                                                        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                        <Setter Property="Text" Value="✓ TẢI TRƯỚC RỒI" />
                                                    </DataTrigger>

                                                    <!--  Canceled  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled}">
                                                        <Setter Property="Foreground" Value="{DynamicResource CanceledBrush}" />
                                                        <Setter Property="Text" Value="✗ BỊ HỦY" />
                                                    </DataTrigger>

                                                    <!--  Canceled_low_quality  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled_low_quality}">
                                                        <Setter Property="Foreground" Value="{DynamicResource CanceledBrush}" />
                                                        <Setter Property="Text" Value="✗ CHẤT LƯỢNG THẤP &lt; 720p" />
                                                    </DataTrigger>

                                                    <!--  Canceled_too_short  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled_too_short}">
                                                        <Setter Property="Foreground" Value="{DynamicResource CanceledBrush}" />
                                                        <Setter Property="Text" Value="✗ NGẮN HƠN 1 PHÚT" />
                                                    </DataTrigger>

                                                    <!--  Canceled_too_long  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Canceled_too_long}">
                                                        <Setter Property="Foreground" Value="{DynamicResource CanceledBrush}" />
                                                        <Setter Property="Text" Value="✗ DÀI HƠN 1 GIỜ" />
                                                    </DataTrigger>

                                                    <!--  Failed  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Failed}">
                                                        <Setter Property="Foreground" Value="{DynamicResource FailedBrush}" />
                                                        <Setter Property="Text" Value="⚠ THẤT BẠI" />
                                                        <Setter Property="ToolTip" Value="{Binding ErrorMessage}" />
                                                    </DataTrigger>

                                                    <!--  Deleted  -->
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static components:DownloadStatus.Deleted}">
                                                        <Setter Property="Foreground" Value="{DynamicResource FailedBrush}" />
                                                        <Setter Property="Text" Value="⚠ ĐÃ XÓA" />
                                                        <Setter Property="ToolTip" Value="Tệp mp4 đã từng được tải về nhưng giờ đã bị xóa. Bấm nút số 2 để tải lại!" />
                                                    </DataTrigger>

                                                    <!--  Uploaded  -->
                                                    <DataTrigger Binding="{Binding UploadDone}" Value="true">
                                                        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                        <Setter Property="Text" Value="ĐANG ĐĂNG,CHƯA RÕ KQ" />
                                                    </DataTrigger>

                                                    <!--  Uploaded  -->
                                                    <DataTrigger Binding="{Binding UploadError}" Value="true">
                                                        <Setter Property="Foreground" Value="{DynamicResource FailedBrush}" />
                                                        <Setter Property="Text" Value="⚠ ĐĂNG LÊN LỖI" />
                                                        
                                                        
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--  Buttons  -->
                    <DataGridTemplateColumn 
                        MinWidth="400">
                         <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                            <StackPanel 
                                Orientation="Horizontal">
                                <CheckBox
                                    Uid="CheckAll"
                                    Content=""
                                    IsThreeState="False"
                                    IsChecked="{Binding
                                    RelativeSource={RelativeSource AncestorType={x:Type DataGrid}},
                                    Path=DataContext.AllItemsAreChecked}" >
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.3" ScaleY="1.3" />
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                <Label HorizontalAlignment="Center" Content="CHỌN TẤT CẢ ĐỂ ĐĂNG" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type components:DownloadViewModel}">
                                <StackPanel
                                    DockPanel.Dock="Right"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">



                                    <!--  Going to upload  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content="MUỐN" />
                                        <CheckBox
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}"
                                        Padding="5"
                                        x:Name="GoingToUpload"
                                        Checked="SelectUploadVideoChanged" Unchecked="SelectUploadVideoChanged"
                                        IsThreeState="False"
                                        IsChecked="{Binding SelectedToUpload, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Content="" >
                                            <CheckBox.LayoutTransform>
                                                <ScaleTransform ScaleX="1.3" ScaleY="1.3" />
                                            </CheckBox.LayoutTransform>
                                        </CheckBox>
                                        <Label HorizontalAlignment="Center" Content="ĐĂNG?" />
                                    </StackPanel>
                                    <!--  Search on GJW  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="Visible">

                                        <Label HorizontalAlignment="Center" Content=" " />
                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action SearchOnGJW}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Kiểm tra trùng trên GJW"
                                        Visibility="Visible">
                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="SearchWeb" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="1" />
                                    </StackPanel>

                                    <!--  Cancel download  -->


                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanCancel, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />
                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action Cancel}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Hủy tải xuống"
                                        Visibility="{Binding CanCancel, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">
                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="CloseCircleOutline" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="2" />
                                    </StackPanel>

                                    <!--  Restart download  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding IsCanceledOrFailed, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />
                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        Command="{s:Action RestartDownload}"
                                        CommandParameter="{Binding}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Tải xuống lại"
                                        Visibility="{Binding IsCanceledOrFailed, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">
                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="Restart" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="2" />
                                    </StackPanel>

                                    <!--  Open file  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />
                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action OpenFile}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Mở tệp"
                                        >
                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="PlayCircleOutline" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="2" />
                                    </StackPanel>
                                    <!--  Copy video path  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />
                                        <Button
                                                Padding="4,0,4,0"
                                                VerticalAlignment="Center"
                                                s:View.ActionTarget="{Binding}"
                                                Command="{s:Action CopyVideoPath}"
                                                Style="{DynamicResource MaterialDesignFlatButton}"
                                                ToolTip="Sao chép đường dẫn video">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Kind="ClipboardPlayOutline" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="3" />
                                    </StackPanel>
                                    
                                    
                                    <!--  Copy thumbnail path  -->


                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />

                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action CopyThumbnailPath}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Sao chép đường dẫn hình thumbnail"
                                        Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="ImageMultipleOutline" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="4" />
                                    </StackPanel>


                                    <!--  Copy title  -->


                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />

                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action CopyVideoTitle}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Sao chép tên video"
                                        Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="ContentCopy" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="5" />
                                    </StackPanel>
                                    <!--  Show file  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanShowFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />

                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action ShowFile}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Mở thư mục tải"
                                        Visibility="{Binding CanShowFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">
                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="FolderOpenOutline" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="6" />
                                    </StackPanel>
                                    <!--  Upload video-->
                                    <Button
                                        Padding="4,0,4,0"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action Upload}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Đăng lên GJW"
                                        >
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="CloudUpload" />
                                    </Button>


                                    <!--  Delete file  -->


                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content=" " />

                                        <Button
                                        Padding="4,0,4,0"
                                        VerticalAlignment="Center"
                                        s:View.ActionTarget="{Binding}"
                                        Command="{s:Action DeleteFile}"
                                        Click="SelectUploadVideoChanged"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Xóa tệp"
                                        Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">
                                            <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="DeleteOutline" />
                                        </Button>
                                        <Label HorizontalAlignment="Center" Content="7" />
                                    </StackPanel>

                                    <!--  AlreadyUploaded  -->

                                    <StackPanel 
                                            Orientation="Vertical"
                                            Visibility="{Binding CanOpenFile, Converter={x:Static converters:BoolToVisibilityConverter.VisibleOrCollapsed}}">

                                        <Label HorizontalAlignment="Center" Content="ĐÃ ĐĂNG" />

                                        <CheckBox 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Padding="0"
                                            x:Name="AlreadyUploaded"
                                            Command="{Binding AlreadyUploadedChanged}"
                                            IsThreeState="False"
                                            IsChecked="{Binding AlreadyUploaded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Content="" >
                                            <CheckBox.LayoutTransform>
                                                <ScaleTransform ScaleX="1.3" ScaleY="1.3" />
                                            </CheckBox.LayoutTransform>
                                        </CheckBox>

                                        <Label HorizontalAlignment="Center" Content="THÀNH CÔNG?" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>